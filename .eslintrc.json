{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [ 
            "error",
            {
                "singleQuote": true,
                "semi": true,
                "jsxSingleQuote": true,
                "trailingComma": "es5",
                "tabWidth": 2,
                "printWidth": 120,
                "endOfLine": "auto"
            }
        ],
        "import/prefer-default-export": "off",
        "jsx-a11y/anchor-has-content": "off",
        "arrow-body-style": "off",
        "react/function-component-definition": "off",
        "react/jsx-filename-extension": "off",
        "linebreak-style": "off",
        "react/prop-types": "off",
        "react/jsx-props-no-spreading": "off"
    }
}
